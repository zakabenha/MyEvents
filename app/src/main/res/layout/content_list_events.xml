<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/content_list_events_image_event"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:srcCompat="@drawable/organisateur_default_icon" />

    <LinearLayout
        android:layout_width="265dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/content_list_events_name_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Evenement"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/content_list_events_name_organisateur"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Organisateur"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/content_list_events_date_event_begin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date et heure" />

        <TextView
            android:id="@+id/content_list_events_location_event"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="Lieu" />

    </LinearLayout>
</LinearLayout>